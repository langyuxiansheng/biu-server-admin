{
  "name": "biu-server-admin",
  "title": "基于Node-Koa2的restfulAPI服务器",
  "version": "1.0.0",
  "description": "基于Node-Koa2的restfulAPI服务器,自带一套管理后台系统,也可以独立出来作为纯API服务器使用",
  "author": "simple",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server --exec babel-node",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production nodemon server/index.js",
    "dist": "nuxt generate",
    "service": "babel server -d server-dist",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "pm": "pm2 start npm --name 'BiuXS' -- run start",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/proxy": "^1.3.3",
    "acorn": "^6.0.5",
    "best-require": "^1.1.4",
    "blueimp-md5": "^2.10.0",
    "cheerio": "^1.0.0-rc.3",
    "cross-env": "^5.2.0",
    "element-ui": "^2.4.11",
    "ip": "^1.1.5",
    "js-cookie": "^2.2.0",
    "koa": "^2.6.2",
    "koa-body": "^4.1.0",
    "koa-cors": "0.0.16",
    "koa-jwt": "^3.5.1",
    "koa-log4": "^2.3.2",
    "koa-response-time": "^2.1.0",
    "koa-router": "^7.4.0",
    "koa-static": "^3.0.0",
    "log4js": "^4.1.0",
    "mysql2": "^1.6.5",
    "node-pre-gyp": "^0.10.0",
    "node-schedule": "^1.3.2",
    "nodemailer": "^6.3.1",
    "nuxt": "^2.3.4",
    "request": "^2.88.2",
    "require-directory": "^2.1.1",
    "sequelize": "^5.3.0",
    "superagent": "^5.0.2",
    "superagent-charset": "^1.2.0",
    "superagent-proxy": "^2.0.0",
